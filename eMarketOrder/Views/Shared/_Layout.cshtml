@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

    <title>@ViewData["Title"] - eMarketOrder </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eMarketOrder.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/base.css" type="text/css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
        integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <b><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">eMarketOrder </a></b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Products" asp-action="">Ürünler <i class="fa fa-star" style="color:green"></i></a>
                        </li>
                        <li class="nav-item">                          
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Cart" asp-action="">Sepetim <i class="fas fa-shopping-cart" style="color:green"></i>                                
                                @if(@HttpContextAccessor.HttpContext.Session.GetInt32("SessionCartCount") != null)
                                {
                                    <span>(@HttpContextAccessor.HttpContext.Session.GetInt32("SessionCartCount"))</span>
                                }
                                else
                                {
                                    <span> (0) </span>
                                }
                            </a>
                            
                        </li>
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="Customer" asp-controller="WishList" asp-action="">Favorilerim <i class="fas fa-heart" style="color:green"></i></a>
                        </li> 
                        
                        <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="Customer" asp-controller="Order" asp-action="">Siparişlerim <i class="fas fa-archive" style="color:green"></i></a>
                        </li> 
                        
  
                        @if (User.IsInRole("Admin"))
                        {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle"
                               data-bs-toggle="dropdown"
                               href="#" role="button"
                               aria-haspopup="true"
                               aria-expanded="false">
                                Admin Menu <i class="fas fa-user-edit big-user-icon"></i>
                            </a>

                            <div class="dropdown-menu">                      
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="">Kategoriler</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Create">Yeni Kategori Ekle</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="">Ürünler</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Crup">Yeni Ürün Ekle</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="">Siparişler</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Yeni Kullanıcı</a>
                            </div>
                            </li>
                        }                            
                    </ul>
                    <form class="form-inline my-2 my-lg-0" asp-area = "Admin" asp-controller="Product" asp-action="Filter" style="padding-left: 5px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a product.." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    
                    <partial name="_LoginPartial" /> <i class="fa fa-user" style= "color:green" aria-hidden="true"></i>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
     <br />  <br /> <br /> <br /> <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - eMarketOrder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
