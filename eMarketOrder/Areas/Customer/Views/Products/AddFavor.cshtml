@model eMarketOrder.Models.ViewModels.WishListVM

<form method="post">

    <div class="row">
        <div class="col-lg-8 m-0">

            @foreach (var item in Model.wishLists)
            {
                 <div class="card p-0 mb-1">
                <div class="card-header  bg-primary text-light m-0 p-0 row ">
                    <div class="col-12 col-md-6">
                        <h6 class="text-white mt-2">@item.Product.Name</h6>
                    </div>                    
                </div>
                <div class="card-body">
                    <div class="rounded pb-2">
                        <div class="row">
                            <div class="col-12 col-lg-3 text-center" style="border-right:1px solid #1140ce; ">
                                <img src="@item.Product.Picture" width="100%" class="rounded" />
                            </div>

                            <div class="col-12 col-lg-8 align-self-center">
                                <div class="row ">
                                    <div class="col-lg-4 m-0">
                                       @item.Product.Name
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>       
            }
        </div>
    </div>
</form>