@model IEnumerable<WishList>
<div class="row py-2">
    @foreach(var item in Model){
        <div class="col-lg-3 col-md-6">
            <div class="row p-1">
                <div class="col-12 p-1" style="border:1px solid #008000; border-radius:4px">
                    <div class="card pt-1">
                        <img src="@item.Picture" class="card-img-top rounded" />
                        <div class="card-body">
                            <div px-1>
                                <p class="card-title h6 text-primary"> @item.Name</p>
                                <p class=px-1> @item.Price ₺ </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="AddFav" class="btn btn-primary form-control" asp-route-productId= "@item.Id">Add Fav</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>